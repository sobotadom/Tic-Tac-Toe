<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sobotad.tictactoe.MainActivity"
    tools:layout_editor_absoluteY="73dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player 2"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/Draws"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/twowins"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/Draws" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Draws"
        app:layout_constraintRight_toLeftOf="@+id/onewins"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/twowins"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="14dp"
        app:layout_constraintLeft_toLeftOf="@+id/onewins" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Player 1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/onewins"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/onewins" />

    <TextView
        android:id="@+id/playerlbl"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:text="Player 1"
        android:textAlignment="center"
        android:textColor="?attr/actionModeSplitBackground"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@+id/tableLayout"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/tableLayout" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintRight_toLeftOf="parent"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </RelativeLayout>

    <TextView
        android:id="@+id/twowins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/colorAccent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="18dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/textView"
        android:layout_marginLeft="18dp" />

    <TextView
        android:id="@+id/Draws"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/colorAccent"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="137dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="19dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:layout_marginRight="137dp" />

    <TextView
        android:id="@+id/onewins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/colorAccent"
        android:layout_marginEnd="136dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:layout_marginRight="136dp" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="197dp"
        android:layout_height="0dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="65dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/playerlbl"
        android:layout_marginTop="2dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="65dp">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/oneone"
                style="@android:style/Widget.ImageButton"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:adjustViewBounds="false"
                android:background="@mipmap/ic_launcher_round"
                app:srcCompat="@android:color/transparent"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="16dp" />

            <ImageButton
                android:id="@+id/onetwo"
                style="@android:style/Widget.ImageButton"
                android:layout_width="65dp"
                android:layout_height="65dp"
                app:srcCompat="@android:color/transparent"
                tools:layout_editor_absoluteX="137dp"
                tools:layout_editor_absoluteY="16dp" />

            <ImageButton
                android:id="@+id/onethree"
                style="@android:style/Widget.ImageButton"
                android:layout_width="65dp"
                android:layout_height="65dp"
                app:srcCompat="@android:color/transparent"
                tools:layout_editor_absoluteX="249dp"
                tools:layout_editor_absoluteY="16dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/twoone"
                style="@android:style/Widget.ImageButton"
                android:layout_width="65dp"
                android:layout_height="65dp"
                app:srcCompat="@android:color/transparent"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="145dp" />

            <ImageButton
                android:id="@+id/twotwo"
                style="@android:style/Widget.ImageButton"
                android:layout_width="65dp"
                android:layout_height="65dp"
                app:srcCompat="@android:color/transparent"
                tools:layout_editor_absoluteX="137dp"
                tools:layout_editor_absoluteY="145dp" />

            <ImageButton
                android:id="@+id/twothree"
                style="@android:style/Widget.ImageButton"
                android:layout_width="65dp"
                android:layout_height="65dp"
                app:srcCompat="@android:color/transparent"
                tools:layout_editor_absoluteX="252dp"
                tools:layout_editor_absoluteY="145dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/threeone"
                style="@android:style/Widget.ImageButton"
                android:layout_width="65dp"
                android:layout_height="65dp"
                app:srcCompat="@android:color/transparent"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="270dp" />

            <ImageButton
                android:id="@+id/threetwo"
                style="@android:style/Widget.ImageButton"
                android:layout_width="65dp"
                android:layout_height="65dp"
                app:srcCompat="@android:color/transparent"
                tools:layout_editor_absoluteX="137dp"
                tools:layout_editor_absoluteY="270dp" />

            <ImageButton
                android:id="@+id/threethree"
                style="@android:style/Widget.ImageButton"
                android:layout_width="65dp"
                android:layout_height="65dp"
                app:srcCompat="@android:color/transparent"
                tools:layout_editor_absoluteX="258dp"
                tools:layout_editor_absoluteY="270dp" />
        </TableRow>

    </TableLayout>

</android.support.constraint.ConstraintLayout>
