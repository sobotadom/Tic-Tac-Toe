<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sobotad.tictactoe.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player 2"
        android:layout_marginRight="34dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="101dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Draws"
        android:layout_marginLeft="126dp"
        android:layout_marginRight="126dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="126dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView"
        android:layout_marginEnd="126dp"
        app:layout_constraintRight_toRightOf="@+id/textView"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="@+id/textView" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Player 1"
        android:layout_marginStart="34dp"
        android:layout_marginLeft="34dp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/Draws"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/playerlbl"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/playerlbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player 1"
        android:textAlignment="center"
        android:textColor="?attr/actionModeSplitBackground"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintRight_toLeftOf="parent"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </RelativeLayout>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:id="@+id/tableLayout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/playerlbl"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/oneone"
                style="@android:style/Widget.ImageButton"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:adjustViewBounds="false"
                android:background="@mipmap/ic_launcher_round"
                app:srcCompat="@android:color/transparent"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="16dp" />

            <ImageButton
                android:id="@+id/onetwo"
                style="@android:style/Widget.ImageButton"
                android:layout_width="110dp"
                android:layout_height="110dp"
                app:srcCompat="@android:color/transparent"
                tools:layout_editor_absoluteX="137dp"
                tools:layout_editor_absoluteY="16dp" />

            <ImageButton
                android:id="@+id/onethree"
                style="@android:style/Widget.ImageButton"
                android:layout_width="110dp"
                android:layout_height="110dp"
                app:srcCompat="@android:color/transparent"
                tools:layout_editor_absoluteX="249dp"
                tools:layout_editor_absoluteY="16dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/twoone"
                style="@android:style/Widget.ImageButton"
                android:layout_width="110dp"
                android:layout_height="110dp"
                app:srcCompat="@android:color/transparent"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="145dp" />

            <ImageButton
                android:id="@+id/twotwo"
                style="@android:style/Widget.ImageButton"
                android:layout_width="110dp"
                android:layout_height="110dp"
                app:srcCompat="@android:color/transparent"
                tools:layout_editor_absoluteX="137dp"
                tools:layout_editor_absoluteY="145dp" />

            <ImageButton
                android:id="@+id/twothree"
                style="@android:style/Widget.ImageButton"
                android:layout_width="110dp"
                android:layout_height="110dp"
                app:srcCompat="@android:color/transparent"
                tools:layout_editor_absoluteX="252dp"
                tools:layout_editor_absoluteY="145dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/threeone"
                style="@android:style/Widget.ImageButton"
                android:layout_width="110dp"
                android:layout_height="110dp"
                app:srcCompat="@android:color/transparent"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="270dp" />

            <ImageButton
                android:id="@+id/threetwo"
                style="@android:style/Widget.ImageButton"
                android:layout_width="110dp"
                android:layout_height="110dp"
                app:srcCompat="@android:color/transparent"
                tools:layout_editor_absoluteX="137dp"
                tools:layout_editor_absoluteY="270dp" />

            <ImageButton
                android:id="@+id/threethree"
                style="@android:style/Widget.ImageButton"
                android:layout_width="110dp"
                android:layout_height="110dp"
                app:srcCompat="@android:color/transparent"
                tools:layout_editor_absoluteX="258dp"
                tools:layout_editor_absoluteY="270dp" />
        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/twowins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/colorAccent"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="14dp"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/textView"
        android:layout_marginLeft="14dp" />

    <TextView
        android:id="@+id/Draws"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="0"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        android:layout_marginStart="16dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/textView3"
        android:layout_marginLeft="16dp" />

    <TextView
        android:id="@+id/onewins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/colorAccent"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/textView2"
        android:layout_marginRight="18dp" />

</android.support.constraint.ConstraintLayout>
